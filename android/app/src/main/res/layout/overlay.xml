<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004455"
    >
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:layout_weight=".40"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/callerAvatar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:civ_border_color="#FF000000"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/callerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:text="caller@email.com"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                />
        </LinearLayout>
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_marginBottom="24dp"
            android:layout_weight=".12"
            app:srcCompat="@drawable/ic_incoming"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#00FFFFFF"
            android:layout_weight=".40"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/calleeAvatar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:civ_border_color="#FF000000"
                    />
            </RelativeLayout>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/calleeEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:text="caller@email.com"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:maxLines="1"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/callAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MsgSafe.io"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            />
        <TextView
            android:id="@+id/callType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Incoming Audio Call"
            android:textColor="#EEEEEE"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_marginRight="100dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/decline"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_decline"
                    android:tint="#FFFFFF"
                    android:background="@drawable/decline_button"
                    android:scaleType="fitCenter"
                    android:padding="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decline"
                    android:layout_marginTop="10sp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/accept"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/ic_accept"
                    android:tint="#FFFFFF"
                    android:background="@drawable/accept_button"
                    android:scaleType="fitCenter"
                    android:padding="24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:layout_marginTop="10sp"
                    android:textColor="#ffffff"
                    />
                </LinearLayout>
            </LinearLayout>
        <TextView
            android:id="@+id/instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20sp"
            android:text="Please go to the app and accept it"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#aaaaaa"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>